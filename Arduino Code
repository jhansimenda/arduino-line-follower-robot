// Line Follower Robot using Arduino
// Two IR Sensors + Motor Driver (L298N/L293D)

#define LEFT_SENSOR 2
#define RIGHT_SENSOR 3

#define IN1 5
#define IN2 6
#define IN3 9
#define IN4 10
#define ENA 7
#define ENB 8

void setup() {
  pinMode(LEFT_SENSOR, INPUT);
  pinMode(RIGHT_SENSOR, INPUT);

  pinMode(IN1, OUTPUT);
  pinMode(IN2, OUTPUT);
  pinMode(IN3, OUTPUT);
  pinMode(IN4, OUTPUT);
  pinMode(ENA, OUTPUT);
  pinMode(ENB, OUTPUT);

  digitalWrite(ENA, HIGH); // Enable motors
  digitalWrite(ENB, HIGH);
}

void loop() {
  int leftSensor = digitalRead(LEFT_SENSOR);
  int rightSensor = digitalRead(RIGHT_SENSOR);

  // Both sensors on black line → Move Forward
  if (leftSensor == LOW && rightSensor == LOW) {
    forward();
  }
  // Left sensor on black, right on white → Turn Left
  else if (leftSensor == LOW && rightSensor == HIGH) {
    turnLeft();
  }
  // Right sensor on black, left on white → Turn Right
  else if (leftSensor == HIGH && rightSensor == LOW) {
    turnRight();
  }
  // Both sensors on white → Stop
  else {
    stopRobot();
  }
}

// Movement Functions
void forward() {
  digitalWrite(IN1, HIGH);
  digitalWrite(IN2, LOW);
  digitalWrite(IN3, HIGH);
  digitalWrite(IN4, LOW);
}

void turnLeft() {
  digitalWrite(IN1, LOW);
  digitalWrite(IN2, LOW);
  digitalWrite(IN3, HIGH);
  digitalWrite(IN4, LOW);
}

void turnRight() {
  digitalWrite(IN1, HIGH);
  digitalWrite(IN2, LOW);
  digitalWrite(IN3, LOW);
  digitalWrite(IN4, LOW);
}

void stopRobot() {
  digitalWrite(IN1, LOW);
  digitalWrite(IN2, LOW);
  digitalWrite(IN3, LOW);
  digitalWrite(IN4, LOW);
}
